{
    "compilerOptions": {
      "incremental": true,
      "module": "commonjs",
      "esModuleInterop": true,
      "target": "es2019",
      "noImplicitAny": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "dist",
      "strict": true,
      "baseUrl": ".",
      "lib": ["ES2019"],
      "paths": {
        "*": ["node_modules/*"],
      }
    },
    "include": ["src/**/*"]
